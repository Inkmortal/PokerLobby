{
  "name": "poker-lobby",
  "version": "1.0.0",
  "description": "Ultimate poker training platform with GTO solver",
  "author": "PokerLobby Team",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "tsc && vite build",
    "build:electron": "npm run build && electron-builder",
    "build:solver": "cd src/solver/rust && npm run build",
    "build:all": "npm run build:solver && npm run build:electron",
    "preview": "vite preview",
    "test": "vitest",
    "lint": "eslint src --ext ts,tsx",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "zustand": "^4.4.7",
    "immer": "^10.0.3",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "recharts": "^2.10.0",
    "react-hot-toast": "^2.4.1",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/core": "^6.1.0",
    "framer-motion": "^10.16.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.32",
    "sass": "^1.69.5",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.15.4",
    "vitest": "^1.1.0",
    "wait-on": "^7.2.0"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.pokerlobby.app",
    "productName": "PokerLobby",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!**/*.map",
      "!**/node_modules/*/{README.md,LICENSE,*.txt}",
      "!**/node_modules/.bin"
    ],
    "mac": {
      "category": "public.app-category.games",
      "icon": "public/icons/icon.icns"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icons/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icons/icon.png",
      "category": "Game"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}